<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#77BFA3">
    <Button
            android:layout_width="0dp"
            android:layout_height="75sp"
            android:id="@+id/analysis"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:backgroundTint="#FFFFFF" style="@android:style/Widget.Button"
            android:text="Full Analysis" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/quick"
            android:textColor="#77BFA3" android:textSize="30sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="75sp"
            android:id="@+id/quick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:backgroundTint="#FFFFFF" style="@android:style/Widget.Button"
            android:text="Quick Decision" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/contact"
            android:layout_marginStart="24dp" android:textColor="#77BFA3" android:textSize="30sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="75sp"
            android:id="@+id/contact" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:backgroundTint="#FFFFFF" style="@android:style/Widget.Button"
            android:text="Contact A Professional" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" android:textColor="#77BFA3" android:textSize="24sp"/>
    <TextView
            android:text="Welcome Darren"
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:id="@+id/name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="85dp" app:layout_constraintTop_toTopOf="parent" android:textColor="#F7FAF9"
            android:textAlignment="center" android:textSize="36sp"/>
    <TextView
            android:text="How Can I Help?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/help" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textColor="#F7FAF9" android:textAlignment="center"
            android:textSize="40sp"
    />
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="67dp"
            android:id="@+id/setting" android:background="#77BEA2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:src="@drawable/cog"/>
</android.support.constraint.ConstraintLayout>