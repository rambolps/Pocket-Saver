<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settingActivity" android:background="#77BFA3">
    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textSize="36sp"/>
    <Switch
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rtx" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintHorizontal_bias="1.0"
            android:text="RTX" android:textSize="24sp"/>
    <Switch
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/pass" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/gl2" app:layout_constraintHorizontal_bias="0.0"
            android:text="Require Password" android:textSize="24sp" android:layout_marginTop="32dp"/>
    <Switch
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:id="@+id/english" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="Set Default Language" android:textSize="24sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/sound2"
    />
    <Switch
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/sound2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/pass" app:layout_constraintHorizontal_bias="0.0"
            android:text="Sound Effects" android:textSize="24sp" android:layout_marginTop="32dp"/>
    <Switch
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:id="@+id/gl2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ccc2" app:layout_constraintHorizontal_bias="1.0"
            android:text="Use Open Gl" android:textSize="24sp" android:layout_marginTop="32dp"/>
    <Switch
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:id="@+id/ccc2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/rtx" app:layout_constraintHorizontal_bias="1.0"
            android:text="Use Canadian Currency" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>